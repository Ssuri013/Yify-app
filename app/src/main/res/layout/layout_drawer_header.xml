
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="200dp"> <!--"@dimen/drawer_header_height"-->

<ImageView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:src="@drawable/drawer_header"
    android:scaleType="centerCrop"
    tools:ignore="ContentDescription"/>

<ImageView android:src="@drawable/ic_movie_black_24dp"
    android:layout_width="@dimen/drawer_icon_size"
    android:layout_height="@dimen/drawer_icon_size"
    android:layout_alignParentBottom="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_marginLeft="@dimen/dist_large"
    android:layout_marginStart="@dimen/dist_large"
    android:layout_marginBottom="@dimen/dist_large"
    tools:ignore="contentDescription"/>

</RelativeLayout>